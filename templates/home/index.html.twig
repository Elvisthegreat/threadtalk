{% extends 'base.html.twig' %}

{% block body %}
    <section>
        <h1>Welcome!</h1>
        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
            {% else %}
                <a href="{{ path('app_register') }}">Register</a>
                <a href="{{ path('app_login') }}">Log in</a>
        {% endif %}
    </section>
{% endblock %}